			<th>수량</th>
			<th>할인가격</th>
		</tr>
		<%
			//session 에서 cart 속성 가져오기 : obj
			Object obj = session.getAttribute("cart");
			//obj <== null
			if(obj == null){
				//ArrayList 생성
				ArrayList<Integer> cart = new ArrayList<>();
				//세션의 속성 지정
				session.setAttribute("cart", cart);
				// 다시 가져오기
				obj = session.getAttribute("cart");
			}
			
			//ArrayList 생성
			
			//세션의 속성 지정
			
			//다시 가져오기
		%>
	</table>

